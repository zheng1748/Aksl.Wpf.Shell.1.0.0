<UserControl x:Class="Aksl.Modules.HamburgerMenuTreeSideBarTab.Views.TreeSideBarItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ei="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:materialDesign="clr-namespace:Aksl.Toolkit.Controls;assembly=Aksl.Toolkit.Controls"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="treeBarItemStyle"
               TargetType="{x:Type TextBlock}">
            <Setter Property="Text"
                    Value="{Binding Title}" />
            <!--<Style.Triggers>
        <DataTrigger Binding="{Binding Level,Mode=OneWay}"
                     Value="1">
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="FontWeight"
                    Value="Bold" />
        </DataTrigger>
    </Style.Triggers>-->
        </Style>

        <Style x:Key="labelStyle"
               TargetType="{x:Type Label}">
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="IsEnabled"
                    Value="{Binding IsEnabled,Mode=TwoWay}" />
            <Setter Property="Content">
                <Setter.Value>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="{Binding Path=IconKind,Mode=OneWay}"
                                                 Foreground="Gray"
                                                 Background="Transparent"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Path=Title,Mode=OneWay}"
                                   IsEnabled="{Binding Path=IsEnabled}"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap">
                        </TextBlock>
                    </StackPanel>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!--<DataTrigger Binding="{Binding Children}"
                 Value="{x:Null}">
        <Setter Property="Visibility"
                Value="Collapsed" />
    </DataTrigger>-->
                <!--<Trigger Property="IsMouseOver"
             Value="True">
        <Setter Property="Background"
                Value="Honeydew" />
    </Trigger>-->
                <DataTrigger Binding="{Binding IsSelected,Mode=TwoWay}"
                             Value="True">
                    <Setter Property="Background"
                            Value="#EEEEEEEE" />
                    <Setter Property="FontSize"
                            Value="20" />
                    <Setter Property="FontWeight"
                            Value="Bold" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsSelected,Mode=TwoWay}"
                             Value="False">
                    <Setter Property="FontSize"
                            Value="18" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal">
        <Label x:Name="treeBarItemLabel"
               Style="{StaticResource labelStyle}">
            <ei:Interaction.Triggers>
                <!--<ei:EventTrigger EventName="MouseLeftButtonDown"
                           SourceObject="{Binding ElementName=treeBarItemLabel}">
              <ei:CallMethodAction TargetObject="{Binding}"
                                   MethodName="ExecuteTreeBarItemClick" />
          </ei:EventTrigger>-->
                <ei:DataTrigger Binding="{Binding Path=Level,Mode=OneWay}"
                                Comparison="Equal"
                                Value="1">
                    <ei:ChangePropertyAction PropertyName="FontSize"
                                             Value="16" />
                    <ei:ChangePropertyAction PropertyName="FontWeight"
                                             Value="Bold" />
                </ei:DataTrigger>
                <ei:DataTrigger Binding="{Binding Path=Level,Mode=OneWay}"
                                Comparison="GreaterThan"
                                Value="1">
                    <ei:ChangePropertyAction PropertyName="FontWeight"
                                             Value="Light" />
                    <ei:ChangePropertyAction PropertyName="FontSize"
                                             Value="14" />
                </ei:DataTrigger>
            </ei:Interaction.Triggers>
        </Label>
    </StackPanel>
</UserControl>
